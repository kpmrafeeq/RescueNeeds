                        @Html.EditorFor(model => model.Cell, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.Cell, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
