@model IEnumerable<RescueNeeds.Service.CampInCharge>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Campus in charge @Html.ActionLink("Create New", "Create")
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Camp.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Person.FirstName) 

                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Camp.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Person.FirstName) (Cell: @item.Person.Cell)
                                <br/>
                                (Login: @item.Person.PersonID)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.CampInChargeID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.CampInChargeID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.CampInChargeID })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>
